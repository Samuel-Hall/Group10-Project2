<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">

          <div class="form-group">
            <label for="title">Expense</label>
            <input type="text" class="form-control" id="title" aria-describedby="title" placeholder="Enter text">
          </div>

          <div class="form-group">
            <label for="total">Total</label>
            <input type="text" class="form-control" id="total" aria-describedby="total" placeholder="Enter text">
          </div>

          <div class="form-group">
            <label for="date">Date</label>
            <input type="text" class="form-control" id="date" aria-describedby="date" placeholder="Enter text">
          </div>

          <div class="form-group">
            <label for="category">Category</label>
            <input type="text" class="form-control" id="category" aria-describedby="category" placeholder="Enter text">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

        {{!-- Expense history table. Populated by refreshExpenses function in index.js --}}
        <h3>History:</h3>
        <table id="expense-list" class="table table-striped">
          <tr>
            <th scope='col'>Expense</th>
            <th scope='col'>Total</th>
            <th scope='col'>Date</th>
            <th scope='col'>Category</th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>