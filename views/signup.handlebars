
<!-- THIS VIEW IS FOR ACCOUNT REGISTRATION -->

<title>Register for $pendTracker</title>

<body class="text-center">

    <div class="row-fluid">
            <div class="jumbotron">
                <div class="container">
                    <h1 class="display-3">$pendTracker</h1>
                    <p>A simple app that helps you track and monitor spending at a glance.</br>
                    Take more control of your budget.</p>
                </div>
            </div>
        </div>

    <div class="row-fluid center-div">
    <form class="form-signin">
      <img class="mb-4" src="$pend.png" alt="" width="110" height="110">
      <h1 class="h3 mb-3 font-weight-normal">Register</h1>
      <label for="inputEmail" class="sr-only"></label>
      <input type="email" id="inputEmail" class="form-control" placeholder="Your email" required autofocus>
      <label for="inputPassword" class="sr-only"></label>
      <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
      <label for="inputPassword" class="sr-only"></label>
      <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm password" required>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="btn btn-md btn-secondary btn-block btn-register" type="submit">Register</button>
    </div>
    </form>

</body>

</html>
